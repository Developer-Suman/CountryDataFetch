@model IEnumerable<Country>

   


    <div class="row">
        <div class="col-md-6">
        <h1>List of Country</h1>

        </div>
    <div class="col-md-6">
        <a asp-action="Create" asp-controller="CountryController1" class="btn btn-primary"><i class="bi bi-plus-circle-fill"></i>Add Country</a>
    </div>
    </div>
    <table class="table table-bordered">
        <tr>
        <th>CountryId</th>
            <th>Name</th>
            <th>Region</th>
        <th>Country Date</th>
        <th>Action</th>
        </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Region</td>
            <td>@item.CreatedDate</td>
            <td>
                <a asp-action="Details" asp-controller="CountryController1" asp-route-id="@item.Id"><i class="bi bi-card-list"></i></a>
                <a asp-action="Edit" asp-controller="CountryController1" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                <a asp-action="Delete" asp-controller="CountryController1" asp-route-id="@item.Id"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
        
    }
 
    </table>